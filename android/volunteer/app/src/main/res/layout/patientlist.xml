<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_margin="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark">


        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_patname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:text="Name: "
            android:textSize="25sp"
            android:textStyle="bold"/>
            <TextView
                android:id="@+id/tv_patname_real"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Rahul"
                android:textSize="25sp"
                android:textStyle="bold"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="Mobile: " />
            <TextView
                android:id="@+id/tv_mobile_real"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="9876543210"
                android:textSize="18sp"
                android:textStyle="bold"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_DOB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:text="DOB: "
            android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_dob_real"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:text="18-07-1998"
                android:textSize="18sp"
                android:textStyle="bold"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="110dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:text="Gender: "
            android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_gender_real"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18-07-1998"
                android:layout_marginTop="110dp"
                android:textSize="18sp"
                android:textStyle="bold"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="140dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:text="Place: "
            android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_place_real"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18-07-1998"
                android:layout_marginTop="140dp"
                android:textSize="18sp"
                android:textStyle="bold"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_panchayath"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="170dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:text="Panchayath: "
            android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_panchayath_real"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18-07-1998"
                android:layout_marginTop="170dp"
                android:textSize="18sp"
                android:textStyle="bold"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_ward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="200dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:text="Ward: "
            android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_ward_real"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18-07-1998"
                android:layout_marginTop="200dp"
                android:textSize="18sp"
                android:textStyle="bold"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="230dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:text="Address: "
            android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_address_real"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18-07-1998"
                android:layout_marginTop="230dp"
                android:textSize="18sp"
                android:textStyle="bold"/>


        </LinearLayout>
        <Button
            android:id="@+id/sendreport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="260dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:text="Send Report"
            android:textStyle="bold"
            android:background="@drawable/buttonstyle"/>

    </androidx.cardview.widget.CardView>


</RelativeLayout>