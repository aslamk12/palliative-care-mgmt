<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_home"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_margin="35dp"
            app:cardCornerRadius="4dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/dark_blue">

                <TextView
                    android:id="@+id/text_tut_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="This is a demo title which needs two lines and trying to make it two"
                    android:textColor="@android:color/white"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="15dp"/>

                <TextView
                    android:id="@+id/text_tut_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="This is a demo title which needs\n two lines and trying\n to make it two"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:layout_below="@id/text_tut_title"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:id="@+id/video_tut_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="   click to play video"
                    android:textColor="@android:color/white"
                    android:textSize="22sp"
                    android:drawableStart="@drawable/ic_play"
                    android:layout_below="@id/text_tut_text"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

</RelativeLayout>