<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="310dp"
        android:layout_margin="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark">


        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_patientname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:text="Name: "
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/teal_700"/>
            <TextView
                android:id="@+id/tv_patientname_real"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Rahul"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/teal_700"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_equip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:textStyle="bold"
                android:textSize="25sp"
                android:text="Equipment: "
                android:textColor="@color/teal_700"/>
            <TextView
                android:id="@+id/tv_equip_real"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="wheel chair"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/teal_700"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_pat_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="90dp"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:textSize="18dp"
                android:text="Mobile: "
                android:textStyle="bold"
                android:textColor="@color/teal_700"/>
            <TextView
                android:id="@+id/tv_pat_mobile_real"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp"
                android:text="9696963214"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/teal_700"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_pat_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="120dp"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:textSize="18dp"
                android:text="Place: "
                android:textStyle="bold"
                android:textColor="@color/teal_700"/>
            <TextView
                android:id="@+id/tv_pat_place_real"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="120dp"
                android:text="Edapal"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/teal_700"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_pat_panchayath"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="150dp"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:textSize="18dp"
                android:text="Panchayath: "
                android:textStyle="bold"
                android:textColor="@color/teal_700"/>
            <TextView
                android:id="@+id/tv_pat_panchayath_real"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="150dp"
                android:text="Vattamkulam"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/teal_700"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_pat_ward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="180dp"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:textSize="18dp"
                android:text="Ward: "
                android:textStyle="bold"
                android:textColor="@color/teal_700"/>
            <TextView
                android:id="@+id/tv_pat_ward_real"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="180dp"
                android:text="5"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/teal_700"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_pat_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="210dp"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:textSize="18dp"
                android:text="Address: "
                android:textStyle="bold"
                android:textColor="@color/teal_700"/>
            <TextView
                android:id="@+id/tv_pat_address_real"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="210dp"
                android:text="Kallingal"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/teal_700"/>
        </LinearLayout>
        <Button
            android:id="@+id/confirm_request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="250dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:text="Confirm Transport"
            android:textStyle="bold"
            android:background="@drawable/buttonstyle"/>

    </androidx.cardview.widget.CardView>

</RelativeLayout>